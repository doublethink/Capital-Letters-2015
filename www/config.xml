<?xml version='1.0' encoding='utf-8'?>
<widget id="nz.co.doublethink.capitalletters" version="0.10.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Captial Letters 2015</name>
    <description>
        Companion application for the Capital Letters 2015 Conference held in Wellington.
    </description>
    <author email="stephen@doublethink.co.nz" href="http://doublethink.co.nz">
        doublethink
    </author>
    <content src="index.html" />

    <icon src="img/icon.png"/>
    <icon src="img/icon-57.png"            gap:platform="ios"        width="57" height="57" />
    <icon src="img/icon-72.png"            gap:platform="ios"        width="72" height="72" />
    <icon src="img/icon-120.png"            gap:platform="ios"        width="120" height="120" />

    <preference name="permissions" value="none"/>

    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
